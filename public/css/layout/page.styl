$header-height = h(2)
$main-menu-width = h(4)

.page-head {
    background: $blue-bg
    border-bottom: 1px solid $nav-border

    position: absolute
    top: 0
    left: 0
    right: 0
    height: $header-height
    z-index: $z-header

    .logo {
        color: $title
        line-height: $header-height
        font-size: 24px
        font-weight: bold
        text-decoration: none

        float: left
        margin-left: h(.5)
        height: $header-height
    }

    .page-cta {
        float: right 
        margin: h(.5) h(.5) 0 0

        a {
            border: 1px solid $blue-bg-dark
            color: $blue
            border-radius: 12px
            font-size: 12px
            line-height: 16px
            text-decoration: none

            margin: 0 0 h(.5) 8px
            padding: 4px 12px
            height: 16px

            &:hover {
                background: $blue
                border: 1px solid transparent
                color: #FFF
            }
        }
    }
}

.page-nav {
    background: $nav-bg

    position: absolute
    top: 0
    left: 0
    padding-top: $header-height
    height: 100%
    z-index: $z-page-nav

    &.fixed {
        position: fixed
        top: -1 * $header-height
    }

    .main-menu {
        border-top: 1px solid $nav-light
        border-right: 1px solid $nav-border
        height: 100%

        ul {
            list-style: none
            overflow: hidden
            margin: 0
            padding: 0
            width: $main-menu-width
        }

        li {
            border-top: 1px solid $nav-border
            border-bottom: 1px solid $nav-light

            position: relative
            margin-top: -2px
            padding-bottom: 2px
            height: $main-menu-width
            z-index: 5

            &:first-child {
                border-top: 0
                margin-top: 0
                padding-bottom: 1px

                a {
                    border-top: 0
                }

                &:hover {
                    border-top: 0

                    a {
                        border-top: 0
                    }
                }
            }

            &:last-child {
                border-bottom: 0
            }

            &:hover {
                border-top: 1px solid $nav-border
                border-bottom: 1px solid $nav-border
                z-index: 10

                a {
                    background: $nav-hover
                    border-color: transparent
                    // color: $blue-bg-dark
                }
            }
        }


        a {
            // background: url('images/sprite.png') no-repeat 0 0
            background: $nav-bg
            border-top: 1px solid $nav-light
            border-bottom: 1px solid $nav-border
            color: $text
            font-size: 12px
            font-weight: bold
            line-height: h()
            text-align: center
            text-decoration: none
            // text-transform: uppercase
            
            display: block
            padding-top: h(3)
            height: h()         
        }
    }

    .sub-menu {
        display: none
    }
}

.page-body {
    position: absolute
    top: $header-height
    left: $main-menu-width
    right: 0
    bottom: 0
}

.document-nav {
    background: #FFF;
    border-right: 1px solid $blue-bg-dark

    position: absolute
    top: 0
    bottom: 0
    left: 0
    padding: h() 0 h() h()
    width: 224px

    &.fixed {
        position: fixed
        left: $main-menu-width
    }

    .title {
        font-size: 14px
        font-weight: bold
        letter-spacing: 1px
        text-transform: uppercase
        margin: 0
    }

    ul {
        list-style: none
        margin: 0
        padding: 0

        ul {
            display: none
            margin: 0 0 h(.25) h(.5)

            li {
                font-size: $f-small
                line-height: 20px
            }
        }
    }

    a {
        display: block
        padding-right: h()
    }

    .current {
        border-right: 3px solid $blue
        color: $title
        font-weight: bold

        &:hover {
            color: $title
            text-decoration: none
        }
    }

    .active {
        ul {
            display: block
        }
    }
}

.anchor {
    display: block
    overflow: hidden
    width: 0
    height: 0
}

section .anchor:first-child {
    margin-top: h(-2)
}


@media only screen and (min-width : 1400px) {
   .component-doc-wrap {
        margin-left: 543px

        section {
            margin-left: -543px
        }

        .left, .right {
            width: 543px
        }
   }
}