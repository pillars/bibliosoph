
// TITLES
// ---------------------------------------------
h1, h2, h3, h4 {
  color: $title;
  font-family: $f-heading;
  letter-spacing: 2px;
  text-rendering: optimizeLegibility;
  margin: 0;
}

h1 {
  font-family: 24px;
  font-weight: normal;
  line-height: 32px;
}

h2 {
  font-size: 20px;
  line-height: 24px;
  margin-top: h(2);
}

h3 {
  font-size: 20px;
  font-weight: normal;
  line-height: 28px;
}

h4 {
  font-size: 16px;
  font-weight: normal;
  line-height: 24px;

  margin: h() 0 0;
}



// PARAGRAPHS
// ---------------------------------------------
p {
  font-size: $f-medium;
  line-height: $base-line-height;
  @include trailer(1, $f-medium);
}
strong { 
  // font-family:'DIN Next W01 Bold';
  font-weight: bold;
}
em {
  font-style: italic;
}


// LINKS
// ---------------------------------------------
a {
  color: $link;
  cursor: pointer;
  text-decoration: underline;

  &:hover {
    color: $link-hover;
  }
}
a.more:after {
  content: '→';
  margin-left: 4px;
}

@mixin linkify {
  color: $link;
  cursor: pointer;

  &:hover {
    color: $link-hover;
  }
}

// LISTS
// ---------------------------------------------
ol, ul {
  @include adjust-font-size-to($f-medium);
  @include leader(1, $f-medium);
  @include trailer(1, $f-medium);
}

ul {
  list-style: disc;
}

dl {
  margin: 0; padding: 0;

  dt, dd {
    @include adjust-font-size-to($f-medium);
    margin: 0; padding: 0;
  }
}


// ABBR
// ---------------------------------------------
abbr {
  font-variant: small-caps;
  font-style: normal;
  letter-spacing: 0.1em;
  text-transform: lowercase;
}


// QUOTES
// ---------------------------------------------
blockquote {
  position: relative;
  margin: h() 0 0 50px;
  padding-top: h();

  &:before {
    font-family: $f-sans;
    color: #CCC;
    font-size: 50px;
  
    content: '“';
    position: absolute;
    top: 0px; left: -30px;
  }

  cite {
    color: #666;
    font-family: $f-sans;
    font-style: italic;
    text-align: right;
    display: block;
  }
}

// CODE
// ---------------------------------------------
pre {
  overflow: auto
  padding-bottom: h(.5)
}

code {
  font-family:'DroidSansMonoW01-Regula';
}
