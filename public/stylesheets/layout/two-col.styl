.two-col {
    .document-content {
        border-left: 1px solid $blue-dark

        min-width: 800px
        min-height: 100%
    }

    .document-wrap {
        background: $blue
        border-left: 1px solid $blue-dark
        box-shadow: #dadfe5 -1px 0 0,rgba(0,0,0,0.05) 1px 0 2px inset
        
        clearfix()
        margin-left: 50%
        min-height: 100%

        section {
            overflow: hidden
            margin-left: -100%

            section {
                float: left
                margin: 0
                width: 100%
            }
        }

        .left, .right {
            box-sizing: border-box
            float: left
            padding: h(2)
            width: 50%
        }
        .left {
            clear: both
        }
        .right {
            clear: right
            float: right
        }
    }

    &.with-nav {
        .document-content {
            margin-left: 248px
        }
    }
}